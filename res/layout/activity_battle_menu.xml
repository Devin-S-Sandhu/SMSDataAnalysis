<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	    
    <TextView 
        android:id="@+id/friend_one_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/friend_one"
        android:textSize="20sp" />
    
    <TextView 
        android:id="@+id/friend_two_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/friend_two"
        android:textSize="20sp" />
    
    <Button 
        android:id="@+id/add_contact_button" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/add_contact" 
        android:onClick="doLaunchContactPicker" />
    
    <Button 
        android:id="@+id/battle_button" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/battle_text" 
        android:onClick="doBattle" />
    
</LinearLayout>
